@model List<jaj.Models.video>

@{
    ViewBag.Title = "Search";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Search</h2>
<br />
<br />
<br />
<br />

@if (Model.Count == 0)
{
    <p>No Results</p>
}
else
{
    foreach (var item in Model)
    {

        <div class="col-md">
            <a href="/Upload/videoPage/@item.videoID">
                <video width="150" height="100">
                    <source src="@Url.Content(item.videoPath)" />
                    <video width="150" height="100" poster="@Url.Content(item.videoPath)">
                        <source src="@Url.Content(item.videoPath)" />
                    </video>
                </video>
                <br />
                @(item.videoName)
            </a>
            <br />
            @item.uploadDate
        </div>
        <br />
        <br />

    }
}
<br />
<br />
<br />
<br />
<br />
<div>
    @Html.ActionLink("Back to Home Page", "Index")
</div>

